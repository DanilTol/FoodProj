@using FoodServiceWebApplication.Controllers
@model IEnumerable<FoodService.Business.DTO.DishModelShortInfo>

@{
    ViewBag.Title = "Week dish set";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Week menu on @ViewBag.DateWeek</h2>

@using (Html.BeginForm("Index", "WeekMenu"))
{
    <input type="date" id="dateInput" name="dateInput" value="@(ViewBag.DateWeek)" />

    <input type="submit" value="Show" name="action:Show" class="btn btn-primary btn-lg"/>
    <input type="submit" value="Edit" name="action:Edit" class="btn btn-primary btn-lg" />
        @*<a href='@Url.Action("Edit", "WeekMenu")' class="btn btn-primary btn-lg">Edit week</a>*@
}

@using (Html.BeginForm("WeekSetToCSV", "WeekMenu"))
{
    <div class="row ">
        @foreach (var item in Model)
        {
            <div class="col-xs-4 col-lg-2 text-center " style="padding: 15px">
                <a href='@Url.Action("Details", "Dishes", new {id = item.ID})'>
                    <img src='@Url.Content("~/Images/Dish/" + @item.Name + "/" + @item.ImagePath)' alt="@item.Name" width="160" height="160"/>
                    <div class="carousel-caption">
                        <p>@item.Name</p>
                        <input type="hidden" name="@item.ID"/>
                    </div>
                </a>
            </div>
        }
    </div>
    <input type="submit" value="WeekSetToCSV"class="btn btn-primary btn-lg" />
}









